{
    "name": "root",
    "version": "0.2.1",
    "author": "Ihor Chulinda <ichulinda@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:Igmat/baset.git"
    },
    "scripts": {
        "postinstall": "lerna bootstrap",
        "build": "lerna run build",
        "watch": "lerna run watch --parallel",
        "test": "lerna link && node ./packages/baset/bin/index.js",
        "accept": "node ./packages/baset/bin/index.js a",
        "help": "node ./packages/baset/bin/index.js --help",
        "doctoc": "doctoc README.md CONTRIBUTING.md",
        "commit": "git-cz",
        "prerelease": "npm run doctoc",
        "release": "lerna publish --yes",
        "commitmsg": "commitlint -e $GIT_PARAMS"
    },
    "devDependencies": {
        "@commitlint/cli": "^6.0.2",
        "@commitlint/config-conventional": "^6.0.2",
        "commitizen": "^2.9.6",
        "cross-spawn": "^6.0.3",
        "cz-conventional-changelog": "^2.1.0",
        "doctoc": "^1.3.0",
        "husky": "^0.14.3",
        "lerna": "^2.8.0",
        "tslint": "^5.9.1",
        "typescript": "next"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "baset": {
        "specs": "tests/*.spec.js",
        "bases": "tests/*.base",
        "plugins": {
            ".spec.js$": "./packages/baset-baseliner-json"
        }
    },
    "dependencies": {}
}
