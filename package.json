{
	"name": "root",
	"version": "0.2.1",
	"author": "Ihor Chulinda <ichulinda@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git@github.com:Igmat/baset.git"
	},
	"scripts": {
		"postinstall": "lerna bootstrap",
		"build": "lerna run build",
		"watch": "lerna run watch --parallel",
		"test": "lerna link && node ./packages/baset/bin/index.js",
		"accept": "node ./packages/baset/bin/index.js a",
		"doctoc": "doctoc README.md CONTRIBUTING.md",
		"commit": "git-cz"
	},
	"devDependencies": {
		"commitizen": "^2.9.6",
		"cz-conventional-changelog": "^2.1.0",
		"doctoc": "^1.3.0",
		"lerna": "^2.8.0",
		"tslint": "^5.9.1",
		"typescript": "^2.6.2"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"baset": {
		"specs": "tests/*.spec.js",
		"bases": "tests/*.base"
	},
	"dependencies": {
		"cross-spawn": "^5.1.0"
	}
}
