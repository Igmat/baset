{
    "packages": [
        "./packages/*",
        "./tests/*"
    ],
    "version": "0.14.1",
    "command": {
        "publish": {
            "allowBranch": "master",
            "conventionalCommits": true,
            "ignoreChanges": [
                "*.md",
                "LICENSE",
                "*.spec.*"
            ]
        },
        "bootstrap": {
            "hoist": true,
            "nohoist": "@types/!(cross-spawn)*"
        }
    }
}
